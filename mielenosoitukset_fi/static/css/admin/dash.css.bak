.create-demo-button,
.btn-create {
    padding: 20px;
    background: var(--admin_create_btn_bg) !important;
    width: auto !important;
    margin-bottom: 20px;
    text-align: start;
}

.create-demo-button:hover,
.btn-create:hover {
    background: var(--admin_create_btn_hover_bg) !important;
}

.button i {
    margin-right: 0.5rem; /* Space between icon and text */
}

.no-results {
    color: var(--red_dark); 
    font-weight: bold; 
    background: var(--red_lighter); 
    padding: 20px; 
    border: 1px dashed var(--red_light); /* Dashed border for emphasis */
    border-radius: 5px;
    text-align: center;
    margin: 1rem 0; /* Margin for separation */
}
