/* Style for the outer wrapper */
.approval_wrapper {
    border: 2px solid var(--border_color); /* Light grey border */
    border-radius: 8px; /* Rounded corners */
    padding: 15px; /* Padding inside the border */
    margin: 20px 0; /* Margin around the whole block */
    background: var(--input_background); /* Light grey background for wrapper */
}

/* Style for checkbox container */
#approval_container {
    padding: 10px;
    border-radius: 5px;
    transition: background 0.3s ease;
    border: 1px solid var(--border_color); /* Light border around the checkbox section */
}

/* Style for status text */
#approval_container .status_text {
    font-weight: bold;
    margin-left: 10px;
}

/* Ensure checkbox aligns nicely with text */
.form_check_input {
    margin-right: 5px;
}

/* Custom styling for the checkbox itself */
.form_check_input {
    width: 30px; /* Larger width */
    height: 40px; /* Larger height */
    cursor: pointer; /* Change cursor to pointer on hover */
    -webkit-appearance: none; /* Remove default styling */
    appearance: none; /* Remove default styling */
    border: 2px solid var(--border_color); /* Light grey border */
    border-radius: 4px; /* Rounded corners */
    background: var(--white); /* White background */
    position: relative; /* Relative positioning for custom checkmark */
    outline: none; /* Remove default focus outline */
}

.form_check_input:checked {
    background: var(--success_bg); /* Green background when checked */
    border-color: var(--success_bg); /* Green border when checked */
}

/* Add a custom checkmark for checked state */
.form_check_input:checked::before {
    content: ''; /* Empty content for the checkmark */
    position: absolute;
    top: 50%;
    left: 50%;
    width: 8px; /* Width of the checkmark */
    height: 16px; /* Height of the checkmark */
    border: solid var(--white); /* White checkmark */
    border-width: 0 3px 3px 0; /* Checkmark border width */
    transform: rotate(45deg); /* Rotate the border to form a checkmark */
    transform-origin: center;
    margin-top: -8px; /* Adjust the vertical position */
    margin-left: -4px; /* Adjust the horizontal position */
}
